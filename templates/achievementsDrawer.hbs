<div class="achievements-inner" role="complementary">

  <div class="achievements-item drawer-item">
		<div role="listitem" class="achievements-item-open drawer-item-open" tabindex="0">
			<div class="drawer-item-title">
				<div class="drawer-item-title-inner h5">{{{model._drawer.achievementsTitle}}}</div>
			</div>
      <div class="drawer-item-description">
        <div class="drawer-item-description-inner achievements-drawer-body">{{{model._drawer.achievementsBody}}}</div>
      </div>
		</div>
	</div>
  <div class="achievements-item-container">
  {{#each assessment}}
    <div class="achievements-item drawer-item">
      <div class="achievements-item-open drawer-item-open">
    		<div class="drawer-item-title">
    			<div class="drawer-item-title-inner h5">{{{_achievements._review.title}}}</div>
    		</div>
    		<div class="drawer-item-description">
    			<div class="drawer-item-description-inner">{{{_achievements._review.description}}}</div>
    		</div>
    		<div class="drawer-achievements-toggle-inner">
          <button class="button drawer-review-button" data-id="{{{_id}}}" role="button">{{{_achievements._review.button}}}</button>
    		</div>
      </div>
    </div>
  {{/each}}
  </div>
  {{#if model._certificate._isEnabled}}
	<div class="achievements-item drawer-item">
		<div role="listitem" class="achievements-item-open drawer-item-open" tabindex="0">
			<div class="drawer-item-title">
				<div class="drawer-item-title-inner h5">{{{model._drawer.certificateTitle}}}</div>
			</div>
			<div class="drawer-item-description">
				<div class="drawer-item-description-inner text-description">{{{model._drawer.certificateDisabled}}}</div>
			</div>
      <div class="certificate-container">
      	<div class="certificate-header">
      		<img class="header-background" src="{{{model._certificate._header}}}"/>
      	</div>
      	<div class="certificate-body">
      		<div class="certificate-content">
      			<div class="certificate-title">Course title</div>
      			<div class="certificate-name">Student name</div>
      			<div class="certificate-date">Date</div>
      		</div>
      		<img class="body-background" src="{{{model._certificate._body}}}"/>
      	</div>
      	<div class="certificate-footer">
      		<img class="footer-background" src="{{{model._certificate._footer}}}"/>
      	</div>
      </div>
			<div class="drawer-certificate-toggle-inner">
        <button class="button drawer-certificate-button print-button" role="button">{{{model._drawer._buttons.print}}}</button>
			</div>
		</div>
	</div>
  {{/if}}
</div>
